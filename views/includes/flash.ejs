<!-- <h1>Flash Message for success</h1> -->

<!-- if success is not present then this will not be displayed and if success is present then it will be displayed -->
<% if (typeof success !== 'undefined' && success && success.length) { %>

<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3"
  role="alert"
>
  <%= Array.isArray(success) ? success.join('\n') : success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if (typeof error !== 'undefined' && error && error.length) { %>

<div
  class="alert alert-danger alert-dismissible fade show col-6 offset-3"
  role="alert"
>
  <%= Array.isArray(error) ? error.join('\n') : error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
